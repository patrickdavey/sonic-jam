<%= simple_form_for(@buffer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :enabled %>
    <%= f.input :code, input_html: { rows: 40 }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
